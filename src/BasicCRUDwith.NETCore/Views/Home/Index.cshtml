@model List<BasicCRUDwith.NETCore.Models.Student>


<br />
<a href="~/Home/Create">Create New Student</a>
<br />
<h4>Persons List</h4>

<table class="table table-striped table-hover">
    <tr>
        <td>Name</td>
        <td>Address</td>
        <td>Contact</td>
        <td>Action</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Contact</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
</table>